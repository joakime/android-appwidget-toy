<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <TextView android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:text="@string/hello"
    android:layout_margin="5dip" />
  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout1">
      <Button android:layout_width="wrap_content" android:id="@+id/btnPickWidget" android:text="@string/pickWidget" android:layout_height="wrap_content"></Button>
      <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/addClock" android:id="@+id/btnPickClock"></Button>
  </LinearLayout>
  <com.erdfelt.toy.appwidget.ToyAppWidgetFrame
    android:id="@+id/widgetFrame" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_margin="5dip"
    android:background="@color/widgetFrameBackground" />
</LinearLayout>
